{
  "name": "munkres",
  "version": "1.1.0",
  "description": "A lightweight and efficient implementation of the Munkres (Hungarian) algorithm for optimal assignment in square and rectangular matrices.",
  "license": "MIT",
  "author": "Michael Rojas <dev.michael.rojas@gmail.com> (https://github.com/havelessbemore)",
  "homepage": "https://github.com/havelessbemore/munkres",
  "bugs": "https://github.com/havelessbemore/munkres/issues",
  "sideEffects": false,
  "engines": {
    "node": ">= 18"
  },
  "type": "module",
  "main": "./dist/cjs/munkres.cjs",
  "module": "./dist/esm/munkres.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/munkres.mjs",
      "require": "./dist/cjs/munkres.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/havelessbemore/munkres.git"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "bench": "vitest --run bench",
    "build": "rimraf dist && tsc && vite build && vite build -c vite.config.misc.ts",
    "build:docs": "typedoc",
    "dev": "vite --host",
    "format": "prettier . --write",
    "lint": "eslint . --ext .ts",
    "prepare": "husky",
    "prepublish": "npm run lint && npm run test && npm run build",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage --run"
  },
  "keywords": [
    "algorithm",
    "assignment",
    "bipartite",
    "combinatorial",
    "cost matrix",
    "hungarian",
    "linear assignment",
    "kuhn",
    "kuhn-munkres",
    "munkres",
    "optimization",
    "pairing",
    "task allocation"
  ],
  "devDependencies": {
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.4.9",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.1.6",
    "vite": "^5.2.6",
    "vite-plugin-banner": "^0.7.1",
    "vite-plugin-dts": "^3.7.1",
    "vitest": "^1.2.2"
  },
  "dependencies": {}
}
